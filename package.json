{
  "name": "starter-react-js",
  "version": "0.0.0",
  "description": "Starter kit for universal React server-side rendering in Node.js w/ Koa2 implementations in Docker",
  "main": "./bin/start",
  "scripts": {
    "prebuild": "del dist",
    "build": "cross-env NODE_ENV=production webpack",
    "coverage": "npm test && codecov",
    "predev": "del dist",
    "dev": "cross-env NODE_ENV=development webpack",
    "fix": "standard --fix",
    "release": "npm test && npm run build && node ./bin/sitemap",
    "start": "NODE_ENV=production node ./bin/start",
    "pretest": "del coverage",
    "test": "standard",
    "posttest": "cross-env NODE_ENV=test jest --ci tst/",
    "pretest:dev": "del coverage",
    "test:dev": "standard",
    "posttest:dev": "cross-env NODE_ENV=test jest -u tst/",
    "pretest:watch": "del coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/starter-react-js.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/starter-react-js/issues"
  },
  "homepage": "https://github.com/fnalabs/starter-react-js#readme",
  "author": "Adam Eilers",
  "license": "MIT",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "dependencies": {
    "koa": "~2.11.0",
    "koa-compress": "~3.0.0",
    "koa-helmet": "~5.2.0",
    "koa-logger": "~3.2.1",
    "koa-static": "~5.0.0",
    "prop-types": "~15.7.2",
    "react": "~16.12.0",
    "react-cookie-consent": "~2.5.0",
    "react-dom": "~16.12.0",
    "react-ga": "~2.7.0",
    "react-helmet": "~5.2.1",
    "react-router": "~5.1.2",
    "react-router-dom": "~5.1.2"
  },
  "devDependencies": {
    "@babel/cli": "~7.7.4",
    "@babel/core": "~7.7.4",
    "@babel/plugin-proposal-class-properties": "~7.7.4",
    "@babel/plugin-transform-modules-commonjs": "~7.7.4",
    "@babel/preset-env": "~7.7.4",
    "@babel/preset-react": "~7.7.4",
    "autoprefixer": "~9.7.3",
    "babel-eslint": "~10.0.3",
    "babel-jest": "~24.9.0",
    "babel-loader": "~8.0.6",
    "babel-plugin-add-module-exports": "~1.0.2",
    "codecov": "~3.6.1",
    "cross-env": "~6.0.0",
    "css-loader": "~3.2.1",
    "cssnano": "~4.1.10",
    "del-cli": "~3.0.0",
    "dotenv-webpack": "~1.7.0",
    "enzyme": "~3.10.0",
    "enzyme-adapter-react-16": "~1.15.1",
    "file-loader": "~5.0.2",
    "isomorphic-style-loader": "~5.1.0",
    "jest": "~24.9.0",
    "node-sass": "~4.13.0",
    "nodemon": "~2.0.1",
    "nodemon-webpack-plugin": "~4.2.1",
    "postcss-loader": "~3.0.0",
    "react-test-renderer": "~16.12.0",
    "sass-loader": "~8.0.0",
    "sitemap": "~5.1.0",
    "standard": "~14.3.1",
    "supertest": "~4.0.2",
    "terser": "~4.4.2",
    "terser-webpack-plugin": "~2.2.1",
    "webpack": "~4.41.2",
    "webpack-cli": "~3.3.10",
    "webpack-manifest-plugin": "~2.2.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage/",
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/tst/",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "modulePaths": [
      "<rootDir>/src/assets",
      "<rootDir>/src/assets/components"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tst/configEnzyme.js"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
