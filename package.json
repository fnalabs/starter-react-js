{
  "name": "starter-react-js",
  "version": "0.0.0",
  "description": "Starter kit for universal React server-side rendering in Node.js w/ Koa2 implementations in Docker",
  "scripts": {
    "prebuild": "del .next out public",
    "build": "cross-env NODE_ENV=production next build",
    "predev": "del .next out public",
    "dev": "cross-env NODE_ENV=development next dev",
    "fix": "ts-standard --fix -p ./tsconfig.json",
    "lint": "ts-standard -p ./tsconfig.json",
    "release": "npm test && npm run build",
    "start": "NODE_ENV=production next start",
    "pretest": "del coverage",
    "test": "cross-env NODE_ENV=test jest --ci --colors --coverage tst/",
    "pretest:watch": "del coverage",
    "test:watch": "cross-env NODE_ENV=test jest --updateSnapshot --colors --coverage --watch tst/",
    "version": "npm run release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/starter-react-js.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/starter-react-js/issues"
  },
  "homepage": "https://github.com/fnalabs/starter-react-js#readme",
  "author": "Adam Eilers",
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "next": "13.2.4",
    "next-pwa": "5.6.0",
    "react": "18.2.0",
    "react-cookie-consent": "8.0.1",
    "react-dom": "18.2.0",
    "react-ga4": "2.1.0",
    "react-helmet": "6.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@tsconfig/next": "1.0.5",
    "@types/jest": "29.4.1",
    "@types/node": "18.15.2",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/react-test-renderer": "18.0.0",
    "cross-env": "7.0.3",
    "del-cli": "5.0.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "next-sitemap": "4.0.5",
    "ts-jest": "29.0.5",
    "ts-standard": "12.0.2",
    "typescript": "4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/config.ts",
      "!src/**/*.d.ts",
      "!tst/**/*.ts"
    ],
    "moduleNameMapper": {
      "^.+\\.css$": "<rootDir>/tst/__mocks__/mock.js"
    },
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    }
  },
  "ts-standard": {
    "ignore": [
      "dist/",
      "docs/",
      "lib/",
      "tmp*"
    ],
    "plugins": [
      "jsx-a11y"
    ]
  },
  "volta": {
    "node": "18.14.0"
  }
}
